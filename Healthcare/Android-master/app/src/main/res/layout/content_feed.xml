                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:text="호흡상태 :"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
