<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StatusActivity"
    tools:layout_editor_absoluteY="56dp"
    tools:showIn="@layout/app_bar_status">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE: "
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="date"
        android:layout_toRightOf="@+id/text_date"
        />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_date"
        android:layout_alignLeft="@+id/text_date"
        />

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="time"
        android:layout_alignBaseline="@+id/text_time"
        android:layout_alignBottom="@+id/text_time"
        android:layout_alignEnd="@+id/edit_date"
        android:layout_toEndOf="@+id/text_time" />

    <TextView
        android:id="@+id/text_sbp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SBP: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_time"
        android:layout_alignLeft="@+id/text_time"
        />

    <EditText
        android:id="@+id/edit_sbp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/text_sbp"
        android:layout_alignBottom="@+id/text_sbp"
        android:layout_toEndOf="@+id/text_sbp" />

    <TextView
        android:id="@+id/text_dbp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DBP: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_sbp"
        android:layout_alignLeft="@+id/text_sbp"
        />

    <EditText
        android:id="@+id/edit_dbp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/text_dbp"
        android:layout_alignBottom="@+id/text_dbp"
        android:layout_toEndOf="@+id/text_dbp" />

    <TextView
        android:id="@+id/text_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEART: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_dbp"
        android:layout_alignLeft="@+id/text_dbp"
        />

    <EditText
        android:id="@+id/edit_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/text_heart"
        android:layout_alignBottom="@+id/text_heart"
        android:layout_toEndOf="@+id/text_heart" />

    <TextView
        android:id="@+id/text_resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESP: "
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_heart"
        android:layout_alignLeft="@+id/text_heart"
        />

    <EditText
        android:id="@+id/edit_resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/text_resp"
        android:layout_alignBottom="@+id/text_resp"
        android:layout_toEndOf="@+id/text_resp" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_insert"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="-49dp"
        android:layout_toEndOf="@+id/edit_dbp"
        android:background="@color/colorBlue"
        android:text="Update" />

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_select"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/edit_time"
        android:background="@color/colorBlue"
        android:text="Insert" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="-10dp"
        android:layout_toEndOf="@+id/edit_date"
        android:background="@color/colorBlue"
        android:text="View" />



    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/text_resp"
        android:layout_marginTop="20dp"
        android:background="#AAAAAA"/>

    <TextView
        android:id="@+id/text_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_alignLeft="@+id/text_time"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="10dp"
        android:text="Health Records"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜               시간     수축   확장  심박  호흡"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/text_sort"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="10dp"
        android:background="#AAAAAA"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_below="@+id/line2"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <ListView
            android:id="@+id/db_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </ScrollView>


</RelativeLayout>